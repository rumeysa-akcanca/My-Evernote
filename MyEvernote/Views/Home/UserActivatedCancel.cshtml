@using MyEvernote.Entities.Messages
@model List<ErrorMessageObject>
@{
    ViewBag.Title = "invalid Operation";
}

@*<h2>RegisterOk</h2>*@



<link href="~/Content/login-resister.css" rel="stylesheet" />


<body id="LoginForm">
    <div class="container">
        <h1 class="form-heading"></h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h2 class="text-center">you are being redirected...</h2>
                    @*<p>Please enter your email and password</p>*@
                </div>
                <form id="Login">
                    <div class="text-danger">
                        <h2><i class="fa fa-remove" style="color:red"></i>&nbsp;&nbsp;&nbsp;account invalid... </h2>
                    </div>
                    <p class="justify-content-center">
                       @*hata mesajlarının verileceği yer*@

                        @foreach (ErrorMessageObject error in Model)
                        {
                            @error.Message<br>//satır satır hataları ekrana yazma
                        }
                    </p>
                </form>
            </div>
        </div>
    </div>


</body>}

